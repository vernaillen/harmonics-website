{
  "name": "harmonics",
  "version": "2.4.0",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --open",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "serve": "nuxt generate && serve dist",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "cy:install": "cypress install",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:dev": "start-server-and-test dev http://localhost:3000 'cypress open --config baseUrl=http://localhost:3000'",
    "cy:local": "start-server-and-test serve http://localhost:3000 'cypress run --config baseUrl=http://localhost:3000'",
    "fulltest": "rm -rf node_modules && pnpm i --shamefully-hoist && pnpm run coverage && pnpm run cy:local",
    "release:patch": "pnpm run fulltest && release-it patch --ci",
    "release:minor": "pnpm run fulltest && release-it minor --ci",
    "release:major": "pnpm run fulltest && release-it major --ci"
  },
  "dependencies": {
    "@mollie/api-client": "^3.6.0",
    "@nuxtjs/axios": "^5.13.6",
    "@pinia/nuxt": "^0.4.7",
    "@sendgrid/mail": "^7.7.0",
    "@vueuse/core": "^9.13.0",
    "animate.css": "^4.1.1",
    "simple-git": "^3.17.0",
    "vee-validate": "^4.7.4",
    "vue-easy-lightbox": "^1.14.0",
    "vue-gtag": "^2.0.1",
    "yup": "^1.0.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.35.3",
    "@nuxt/content": "^2.4.3",
    "@nuxt/image-edge": "1.0.0-27968280.9739e4d",
    "@nuxt/test-utils": "^3.2.3",
    "@nuxtjs/google-fonts": "3.0.0-1",
    "@nuxtjs/i18n": "8.0.0-beta.9",
    "@nuxtjs/supabase": "^0.3.1",
    "@nuxtjs/tailwindcss": "^6.4.1",
    "@vitest/coverage-c8": "^0.29.2",
    "@vueuse/nuxt": "^9.13.0",
    "cypress": "^12.7.0",
    "dayjs": "^1.11.7",
    "jsdom": "^21.1.0",
    "nuxt": "^3.2.3",
    "nuxt-icon": "^0.3.2",
    "release-it": "^15.7.0",
    "remark-breaks": "^3.0.2",
    "remark-directive-rehype": "^0.4.2",
    "sitemap": "^7.1.1",
    "start-server-and-test": "^2.0.0",
    "vitest": "^0.29.2"
  },
  "eslintConfig": {
    "extends": "@antfu"
  },
  "release-it": {
    "git": {
      "commit": true,
      "tag": true,
      "push": true,
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": false
    },
    "npm": {
      "publish": false
    }
  }
}
