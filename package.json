{
  "name": "harmonics.be",
  "version": "0.3.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/vernaillen/harmonics-website.git"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt build && nuxt preview",
    "start": "node .output/server/index.mjs",
    "lagon:dev": "NITRO_PRESET=lagon NUXT_IMAGE_PROVIDER=twicpics pnpm build && npx -p esbuild -p @lagon/cli lagon dev",
    "lagon:deploy": "NITRO_PRESET=lagon NUXT_IMAGE_PROVIDER=twicpics pnpm build && npx -p esbuild -p @lagon/cli lagon deploy",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "cy:install": "cypress install",
    "cy:dev": "start-server-and-test dev http://localhost:3000 'cypress open --config baseUrl=http://localhost:3000'",
    "cy:local": "start-server-and-test preview http://localhost:3000 'cypress run --config baseUrl=http://localhost:3000'",
    "cy:prod": "cypress run --config baseUrl=https://concept.harmonics.be",
    "unlighthouse:dev": "start-server-and-test preview http://localhost:3000 'npx unlighthouse --site http://localhost:3000'",
    "unlighthouse:prod": "npx unlighthouse --site https://harmonics.vercel.app",
    "fulltest": "rm -rf node_modules && pnpm i && pnpm run lint && pnpm run coverage && pnpm run build"
  },
  "devDependencies": {
    "@dargmuesli/nuxt-cookie-control": "^6.4.2",
    "@iconify-json/circle-flags": "^1.1.41",
    "@iconify-json/logos": "^1.1.35",
    "@iconify-json/mdi": "^1.1.54",
    "@iconify-json/noto": "^1.1.12",
    "@iconify-json/ph": "^1.1.6",
    "@iconify-json/simple-icons": "^1.1.69",
    "@nuxt/content": "^2.8.2",
    "@nuxt/devtools": "^0.8.3",
    "@nuxt/image": "^1.0.0-rc.1",
    "@nuxt/ui": "^2.8.0",
    "@nuxthq/studio": "^0.14.1",
    "@nuxtjs/critters": "^0.5.0",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@nuxtjs/i18n": "8.0.0-rc.3",
    "@nuxtjs/plausible": "^0.2.1",
    "@types/node": "^20.5.9",
    "@vernaillen/nuxt-base-layer": "^0.2.20",
    "@vitest/coverage-v8": "^0.34.3",
    "@vueuse/nuxt": "^10.4.1",
    "cssnano": "^6.0.1",
    "cypress": "^13.1.0",
    "dayjs": "^1.11.9",
    "eslint": "^8.48.0",
    "happy-dom": "10.0.0",
    "nuxt": "^3.7.1",
    "nuxt-og-image": "^2.0.25",
    "nuxt-time": "^0.1.1",
    "nuxt-vitest": "^0.10.4",
    "remark-breaks": "^3.0.3",
    "start-server-and-test": "^2.0.0",
    "vitest": "0.33.0"
  },
  "dependencies": {
    "@twicpics/components": "^0.22.1",
    "resend": "^1.0.0",
    "valibot": "^0.13.1",
    "vue-easy-lightbox": "^1.16.0",
    "yup": "^1.2.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
